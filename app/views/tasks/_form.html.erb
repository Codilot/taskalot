<%= form_for @task, remote: true do |f| %>
    <div class="form-group">
      <%= f.label :description, class: "control-label" %>
      <%= f.text_field :description, placeholder: "Your task", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :deadline, class: "control-label" %>
      <%= f.datetime_field  :deadline, id: :task_deadline, class: "datetimepicker form-control" %>
    </div>
    

  <%= button_tag :submit, class: 'btn btn-primary' %>
<% end %>

