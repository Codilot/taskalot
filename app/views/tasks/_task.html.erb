<li class="list-group-item list-group-item-default">
  <span class="description"><%= task.description %></span>
  <span class="deadline"><%= task.deadline.strftime('%d %B  %Y') %></span>
  
  <span class="edit">
    <%= link_to edit_task_path(task), remote: true, class: 'btn btn-default btn-xs' do %>
    <i class="glyphicon glyphicon-pencil"></i>
    <% end %>

    <%= link_to task, remote: true, method: :delete, class: 'btn btn-default btn-xs' do %>
    <i class="glyphicon glyphicon-remove"></i>
    <% end %>
  </span>
</li>